{
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"customizations": {
			"vscode": {
					"extensions": [
						"haskell.haskell",
						"ms-azuretools.vscode-docker"
					]
			}
	},
	"remoteUser": "haskell",
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/haskell/.ssh,type=bind,readonly"
	],
	"postStartCommand": "cabal update"
}
